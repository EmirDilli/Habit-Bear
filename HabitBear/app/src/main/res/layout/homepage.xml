<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:background="@mipmap/ic_background"
    android:id="@+id/bg">

        <Button
            android:id="@+id/habits"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#de0925"
            android:text="Habits"
            android:fontFamily="@font/changa_one"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/market"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#de0925"
            android:text="Market"
            android:adjustViewBounds="true"
            android:fontFamily="@font/changa_one"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/calendar"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/habits"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#de0925"
            android:text="Calendar"
            android:adjustViewBounds="true"
            android:fontFamily="@font/changa_one"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/inventory"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#de0925"
            android:text="Inventory"
            android:adjustViewBounds="true"
            android:fontFamily="@font/changa_one"
            android:textSize="20dp" />

    <TextView
        android:id="@+id/currentStreak"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Current Streak:"
        android:textColor="#020a99"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:fontFamily="@font/changa_one"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/highestStreak"
        android:text="Highest Streak:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#020a99"
        android:adjustViewBounds="true"
        android:fontFamily="@font/changa_one"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/habitBearIcon"
        android:layout_width="520dp"
        android:layout_height="520dp"
        android:layout_marginTop="190dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_bear_plain" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/currentStreak"
        android:src="@drawable/ic_settings"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/coin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/highestStreak"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_coin"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/bearName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/changa_one"
        android:text="Bear Name"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:adjustViewBounds="true"/>





</RelativeLayout>