<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory"
    android:background="#f0f6fa">

    <TextView
        android:id="@+id/inventoryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="INVENTORY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/changa_one"
        android:textColor="#020a99" />

    <ImageView
        android:id="@+id/backInventory"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/bear"
        android:layout_width="200dp"
        android:layout_height="274dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ayi3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/c1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/shirt_red"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/c2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/c1"
        android:src="@mipmap/shirt_green"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/c3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/c2"
        android:src="@mipmap/shirt_blue"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/c4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/pants_red"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/c5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="400dp"
        android:layout_toRightOf="@+id/c4"
        android:src="@mipmap/pants_green"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/c6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="400dp"
        android:layout_toRightOf="@+id/c5"
        android:src="@mipmap/pants_blue"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/c7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="500dp"
        android:src="@mipmap/glass_yellow"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/c8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="500dp"
        android:layout_toRightOf="@+id/c7"
        android:src="@mipmap/brown_moustache"
        android:visibility="invisible"/>


</RelativeLayout>