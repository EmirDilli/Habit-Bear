<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ayi_bg_3"
    tools:context=".Homepage">



    <TextView
        android:id="@+id/habitHeader"
        android:layout_width="-50dp"
        android:layout_height="-50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/holo_red_dark"
        android:backgroundTint="#D31F1F"
        android:fontFamily="sans-serif"
        android:text="Habits"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/backMountain"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        android:backgroundTint="#D31F1F"
        android:foreground="?attr/actionModeCloseDrawable"
        android:foregroundTint="@color/white"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/workout"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/sport"
        android:foreground="@drawable/sport" />

    <ImageButton
        android:id="@+id/eat"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/workout"
        android:foreground="@drawable/eat" />

    <ImageButton
        android:id="@+id/quitSmoke"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/eat"
        android:foreground="@drawable/smoke" />

    <ImageButton
        android:id="@+id/study"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:foreground="@drawable/study" />

    <ImageButton
        android:id="@+id/medicine"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="23dp"
        android:layout_toEndOf="@+id/study"
        android:foreground="@drawable/drugs" />

    <ImageButton
        android:id="@+id/health"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="23dp"
        android:foreground="@drawable/custom" />

    <CheckBox
        android:id="@+id/first"
        android:layout_width="129dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@id/workout"/>

    <CheckBox
        android:id="@+id/second"
        android:layout_width="129dp"
        android:layout_height="50dp"/>

    <CheckBox
        android:id="@+id/third"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <CheckBox
        android:id="@+id/fourth"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <CheckBox
        android:id="@+id/fifth"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <CheckBox
        android:id="@+id/sixth"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</RelativeLayout>