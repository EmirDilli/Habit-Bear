<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/ayi_bg2"
    tools:context=".HabitsPage"
    >


    <Button
        android:id="@+id/eat"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/eat"
        app:layout_constraintBottom_toTopOf="@+id/clock"
        app:layout_constraintEnd_toStartOf="@+id/water"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></Button>

    <Button
        android:id="@+id/read"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/study"
        app:layout_constraintBottom_toTopOf="@+id/exercise"
        app:layout_constraintEnd_toStartOf="@+id/eat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></Button>

    <Button
        android:id="@+id/self"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/self_improvement"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="607dp"></Button>

    <Button
        android:id="@+id/water"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="16dp"
        android:background="@drawable/water"
        app:layout_constraintBottom_toTopOf="@+id/self"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></Button>

    <Button
        android:id="@+id/clock"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/clock"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="609dp"></Button>

    <Button
        android:id="@+id/exercise"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/exercise"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="609dp"></Button>




</androidx.constraintlayout.widget.ConstraintLayout>