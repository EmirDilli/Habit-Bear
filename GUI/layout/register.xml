<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="#f0f6fa">

    <ImageView
        android:id="@+id/habitBearIcon"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_above="@id/habitBearTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:src="@mipmap/ic_habit_bear" />

    <TextView
        android:id="@+id/habitBearTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/changa_one"
        android:layout_marginTop="20dp"
        android:text="HABIT BEAR"
        android:textColor="#de0925"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/enterBearName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/habitBearTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/changa_one"
        android:hint="Enter a name for your bear"
        android:textColor="@color/black"
        android:textColorHint="#757575" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterBearName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#de0925"
        android:fontFamily="@font/changa_one"
        android:text="start!" />

</RelativeLayout>